@page
@model ProyectoAE.Pages.GestionDeEventos.Boletos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Boletos</h2>

<p>
    <a asp-page="Create">Agregar nuevo Boleto</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Id de la Zona
                </th>
                <th>
                    Id del Evento
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Boleto[0].Importe)
                </th>
                <th>
                    IVA
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Boleto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdZona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioIva)
            </td>
            <td>
                <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.Id"></a> |
                <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.Id"></a> |
                <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.Id"></a>
            </td>
        </tr>
}
    </tbody>
</table>
