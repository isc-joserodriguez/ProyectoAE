@page
@model ProyectoBase.Pages.FicGestionEventos.CatProdServEspecifico.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Agregar</h2>

<h4>Catálogo de Productos/Servicios Especificos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="cat_prod_serv_especifico.IdProdServ" type="hidden" value="@Model.IdProdServ" class="form-control" />
            <div class="form-group">
                <label class="control-label">Producto o Servicio: @Model.getProdServ(Model.IdProdServ.ToString())</label>
            </div>
            <div class="form-group">
                <label asp-for="cat_prod_serv_especifico.ClaveProdServEsp" class="control-label">Clave</label>
                <input asp-for="cat_prod_serv_especifico.ClaveProdServEsp" class="form-control" />
                <span asp-validation-for="cat_prod_serv_especifico.ClaveProdServEsp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cat_prod_serv_especifico.DesProdServEsp" class="control-label">Descripción</label>
                <textarea asp-for="cat_prod_serv_especifico.DesProdServEsp" class="form-control" ></textarea>
                <span asp-validation-for="cat_prod_serv_especifico.DesProdServEsp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-info" /> |
                <a asp-page="Index" asp-route-id="@Model.IdProdServ" class="btn btn-warning">Regresar a lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
