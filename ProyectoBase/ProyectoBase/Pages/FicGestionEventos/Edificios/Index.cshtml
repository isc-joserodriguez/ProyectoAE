@page
@model ProyectoBase.Pages.FicGestionEventos.Edificios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catálago de Edificios</h2>

<form asp-page="./Index" method="get">
    <p>
        <input name="busqueda" value="@Model.CurrentFilter" placeholder="Buscar por Ckave, Alias o Prioridad" class="form-control" />
        <input type="submit" value="Buscar" class="btn btn-info btn-block" />
    </p>
    <p>
        <a asp-page="Create" class="btn btn-info">Crear</a>
        <a asp-page="./Index" class="btn btn-warning">Limpiar</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Clave</label>
            </th>
            <th>
                <label class="control-label">Alias</label>
            </th>
            <th>
                <label class="control-label">Descripción</label>
            </th>
            <th>
                <label class="control-label">Prioridad</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.eva_cat_edificios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesEdificio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prioridad)
                </td>
                <td>
                    <div class="nav-item dropdown">
                        <a class="btn btn-info" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Opciones
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a asp-page="../Espacios/Index" class="glyphicon glyphicon-home" asp-route-id="@item.IdEdificio"> Catalago/Espacios</a>
                                    <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.IdEdificio"> Editar</a>
                                    <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.IdEdificio"> Detalles</a>
                                    <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.IdEdificio"> Eliminar</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                  
                </td>
            </tr>
        }
    </tbody>
</table>
