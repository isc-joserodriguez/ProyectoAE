@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.CatProductoServicios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catálago de Productos/Servicios</h2>

<p>
    <a asp-page="Create" class="btn btn-info">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Clave:
            </th>
            <th>
                Código de Barras:
            </th>
            <th>
                Producto o Servicio
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.cat_productos_servicios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaveProdServ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoBarras)
                </td>
                <td>
                    @Model.getProductoServicio(item.ProductoServicio)
                </td>
                <td>
                    <div class="nav-item dropdown">
                        <a class="btn btn-info" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Opciones
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a asp-page="../CatProdServEspecifico/index" class="glyphicon glyphicon-apple" asp-route-id="@item.IdProdServ"> Prod-Serv/Especificos</a>
                                    <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.IdProdServ"> Editar</a>
                                    <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.IdProdServ"> Detalles</a>
                                    <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.IdProdServ"> Eliminar</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
