@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.CatTiposEstatus.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Tipo Estatus </h2>

<h4>Catálogo Tipo Estatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="cat_tipos_estatus.IdTipoEstatus" />
            <div class="form-group">
                <label class="control-label">Descripción del Tipo de Estatus:</label>
                <textarea asp-for="cat_tipos_estatus.DesTipoEstatus" class="form-control"></textarea>
                <span asp-validation-for="cat_tipos_estatus.DesTipoEstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Activo</label>
                @Html.DropDownListFor(model => model.cat_tipos_estatus.Activo, Model.Activo, "Selecciona", new { @class = "form-control" })
                <span asp-validation-for="cat_tipos_estatus.Activo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-info" />
                <a asp-page="./Index" class="btn btn-warning">Regresar a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
