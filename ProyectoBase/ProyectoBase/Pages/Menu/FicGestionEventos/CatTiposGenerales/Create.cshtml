@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.CatTiposGenerales.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Agregar</h2>

<h4>Catálago Tipos de Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Id:</label>
                <input asp-for="cat_tipos_generales.IdTipoGeneral" class="form-control"/>
                <span asp-validation-for="cat_tipos_generales.IdTipoGeneral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripción:</label>
                <textarea asp-for="cat_tipos_generales.DesTipo" class="form-control"></textarea>
                <span asp-validation-for="cat_tipos_generales.DesTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Activo:</label>
                @Html.DropDownListFor(model => model.cat_tipos_generales.Activo, Model.Activo, "Selecciona", new { @class = "form-control" })<br />
                <span asp-validation-for="cat_tipos_generales.Activo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-info" />
                <a asp-page="Index" class="btn btn-warning">Regresar a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
