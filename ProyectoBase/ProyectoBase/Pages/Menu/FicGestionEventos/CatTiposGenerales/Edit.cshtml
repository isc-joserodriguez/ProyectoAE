@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.CatTiposGenerales.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Tipo Estatus @Html.DisplayFor(model => model.cat_tipos_generales.DesTipo)</h2>

<h4>Catálogo Tipo Generales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="cat_tipos_generales.IdTipoGeneral" />
            <div class="form-group">
                <label class="control-label">Descripción:</label>
                <textarea asp-for="cat_tipos_generales.DesTipo" class="form-control" ></textarea>
                <span asp-validation-for="cat_tipos_generales.DesTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Activo:</label>
                @Html.DropDownListFor(model => model.cat_tipos_generales.Activo, Model.Activo, "Selecciona", new { @class = "form-control" })
                <br />
                <span asp-validation-for="cat_tipos_generales.Activo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a asp-page="./Index" class="btn btn-default">Regresar a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
