@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.CatTiposGenerales.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catálago Tipos de Evento</h2>

<p>
    <a asp-page="Create">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Descripción</label>
            </th>
            <th>
                <label class="control-label">Activo</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.cat_tipos_generales)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DesTipo)
                </td>
                <td>
                    @Model.Activo(item.Activo)
                </td>
                <td>
                    <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.IdTipoGeneral"></a> |
                    <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.IdTipoGeneral"></a> |
                    <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.IdTipoGeneral"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
