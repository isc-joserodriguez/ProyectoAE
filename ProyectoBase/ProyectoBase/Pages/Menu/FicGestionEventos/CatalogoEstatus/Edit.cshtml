@page
@model ProyectoBase.Pages.FicGestionEventos.CatalogoEstatus.EditModel

@{
    ViewData["Title"] = "Editar Estatus";
}

<h2>Editar Estatus [@Html.DisplayFor(model => model.cat_estatus.Id)]</h2>

<h4>Catálogo Estatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cat_estatus.IdTipoEstatus" class="control-label">Id Tipo Estatus</label>
                <input asp-for="cat_estatus.IdTipoEstatus" class="form-control" />
                <span asp-validation-for="cat_estatus.IdTipoEstatus" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="cat_estatus.Id" />
            <div class="form-group">
                <label asp-for="cat_estatus.Clave" class="control-label">Clave</label>
                <input asp-for="cat_estatus.Clave" class="form-control" />
                <span asp-validation-for="cat_estatus.Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cat_estatus.DesEstatus" class="control-label">Descripción</label>
                <input asp-for="cat_estatus.DesEstatus" class="form-control" />
                <span asp-validation-for="cat_estatus.DesEstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cat_estatus.Activo" class="control-label">Activo</label>
                <input asp-for="cat_estatus.Activo" class="form-control" />
                <span asp-validation-for="cat_estatus.Activo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a asp-page="./Index" class="btn btn-default">Regresar a lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
