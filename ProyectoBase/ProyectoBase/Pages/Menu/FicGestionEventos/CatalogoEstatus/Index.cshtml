@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.CatalogoEstatus.IndexModel

@{
    ViewData["Title"] = "Catalago Estatus";
}

<h2>Catálago Estatus</h2>

<p>
    <a asp-page="Create">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Tipo Estatus</label>
            </th>
            <th>
                <label class="control-label">Clave</label>
            </th>
            <th>
                <label class="control-label">Descripción</label>
            </th>
            <th>
                <label class="control-label">Activo</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.cat_estatus)
        {
            <tr>
                <td>
                    @Model.TipoEstatus(item.IdTipoEstatus.ToString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesEstatus)
                </td>
                <td>
                    @Model.Activo(item.Activo)
                </td>
                <td>
                    <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.IdEstatus"></a> |
                    <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.IdEstatus"></a> |
                    <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.IdEstatus"></a>
                </td>
            </tr>
        }
    </tbody>
</table>