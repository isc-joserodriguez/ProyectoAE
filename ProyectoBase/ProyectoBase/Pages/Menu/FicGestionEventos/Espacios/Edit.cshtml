@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.Espacios.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Catálogo de Espacios</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Edificio: @Model.Edificio(Model.IdEdificio.ToString())</label>
                <input asp-for="eva_cat_espacios.IdEdificio" value="@Model.IdEdificio" type="hidden" class="form-control" />
            </div>
            <input type="hidden" asp-for="eva_cat_espacios.IdEspacio" />
            <div class="form-group">
                <label class="control-label">Clave:</label>
                <input asp-for="eva_cat_espacios.Clave" class="form-control" />
                <span asp-validation-for="eva_cat_espacios.Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Alias:</label>
                <input asp-for="eva_cat_espacios.Alias" class="form-control" />
                <span asp-validation-for="eva_cat_espacios.Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripción:</label>
                <textarea asp-for="eva_cat_espacios.DesEspacio" class="form-control" ></textarea>
                <span asp-validation-for="eva_cat_espacios.DesEspacio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Capacidad</label>
                <input asp-for="eva_cat_espacios.Capacidad" type="number" class="form-control" />
                <span asp-validation-for="eva_cat_espacios.Capacidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Prioridad</label>
                <input asp-for="eva_cat_espacios.Prioridad" type="number" class="form-control" />
                <span asp-validation-for="eva_cat_espacios.Prioridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-info" /> |
                <a asp-page="./Index" asp-route-id="@Model.IdEdificio" class="btn btn-warning">Regresar a lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
