@page
@model ProyectoBase.Pages.FicGestionEventos.EventoEstatus.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catálago Evento Estatus</h2>

<p>
    <a asp-page="Create">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id Evento
            </th>
            <th>
                Fecha Estatus
            </th>
            <th>
                Id Tipo Estatus
            </th>
            <th>
                Id Estatus
            </th>
            <th>
                @Html.DisplayNameFor(model => model.res_evento_estatus[0].Actual)
            </th>
            <th>
                Observaciones
            </th>
            <th>
                Usuario que registra
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.res_evento_estatus)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEvento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEstatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoEstatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioReg)
                </td>
                <td>
                    <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.Id"></a> |
                    <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.Id"></a> |
                    <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.Id"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
