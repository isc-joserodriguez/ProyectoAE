@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.EventoHorarios.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Eventos por Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Evento:</label>
                @Html.DropDownListFor(model => model.res_evento_horarios.IdEvento, Model.Eventos, "Selecciona", new { @class = "form-control" })
                <span asp-validation-for="res_evento_horarios.IdEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Edificio:</label>
                @Html.DropDownListFor(model => model.res_evento_horarios.IdEdificio, Model.Edificios, "Selecciona", new { @class = "form-control", @onchange = @"form.submit();" })
                <span asp-validation-for="res_evento_horarios.IdEdificio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Espacio:</label>
                @Html.DropDownListFor(model => model.res_evento_horarios.IdEspacio, Model.Espacio, "Selecciona", new { @class = "form-control" })
                <span asp-validation-for="res_evento_horarios.IdEspacio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Dia:</label>
                @Html.DropDownListFor(model => model.res_evento_horarios.Dia, Model.Dias, "Selecciona", new { @class = "form-control" })
                <span asp-validation-for="res_evento_horarios.Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha y Hora de Inicio:</label>
                <input asp-for="res_evento_horarios.FechaHoraIni" class="form-control" />
                <span asp-validation-for="res_evento_horarios.FechaHoraIni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha y Hora de Culminación:</label>
                <input asp-for="res_evento_horarios.FechaHoraFin" class="form-control" />
                <span asp-validation-for="res_evento_horarios.FechaHoraFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Disponibilidad:</label>
                @Html.DropDownListFor(model => model.res_evento_horarios.Disponible, Model.Disponibilidad, "Selecciona", new { @class = "form-control" })
                <span asp-validation-for="res_evento_horarios.Disponible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de Registro:</label>
                <input asp-for="res_evento_horarios.FechaReg" class="form-control" />
                <span asp-validation-for="res_evento_horarios.FechaReg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Usuario que Registro:</label>
                <input asp-for="res_evento_horarios.UsuarioReg" class="form-control" />
                <span asp-validation-for="res_evento_horarios.UsuarioReg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
