@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.EventoZonaBoletos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Generar Boletos</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="res_evento_zona_boletos.NumBoleto" value="1" type="hidden" class="form-control" />
            <input asp-for="res_evento_zona_boletos.Ubicacion" value="gjhgjhg" type="hidden" class="form-control" />
            <input asp-for="IdHorario" type="hidden" name="IdHorario_" class="form-control" />
            <div class="form-group">
                <label class="control-label">Evento: @Model.getEvento(Model.IdEvento.ToString())</label>
                <input asp-for="res_evento_zona_boletos.IdEvento" value="@Model.IdEvento" type="hidden" class="form-control" />
                <span asp-validation-for="res_evento_zona_boletos.IdEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Edificio: @Model.getEdificio(Model.IdEdificio.ToString())</label>
                <input asp-for="res_evento_zona_boletos.IdEdificio" value="@Model.IdEdificio" type="hidden" class="form-control" />
                <span asp-validation-for="res_evento_zona_boletos.IdEdificio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Espacio: @Model.getEspacio(Model.IdEspacio.ToString())</label>
                <input asp-for="res_evento_zona_boletos.IdEspacio" value="@Model.IdEspacio" type="hidden" class="form-control" />
                <span asp-validation-for="res_evento_zona_boletos.IdEspacio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Zona: @Model.getZona(Model.IdZona.ToString())</label>
                <input asp-for="res_evento_zona_boletos.IdZona" value="@Model.IdZona" type="hidden" class="form-control" />
                <span asp-validation-for="res_evento_zona_boletos.IdZona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="res_evento_zona_boletos.DesBoleto" class="control-label"></label>
                <textarea asp-for="res_evento_zona_boletos.DesBoleto" class="form-control"></textarea>
                <span asp-validation-for="res_evento_zona_boletos.DesBoleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="res_evento_zona_boletos.Precio" class="control-label"></label>
                <input asp-for="res_evento_zona_boletos.Precio" class="form-control" />
                <span asp-validation-for="res_evento_zona_boletos.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="res_evento_zona_boletos.IVA" class="control-label"></label>
                <input asp-for="res_evento_zona_boletos.IVA" class="form-control" />
                <span asp-validation-for="res_evento_zona_boletos.IVA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad: </label>
                <input asp-for="cantidad" value="50" type="number" name="id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Generar Boletos" class="btn btn-info" />
                <a asp-page="Index" asp-route-edificio="@Model.IdEdificio"
                   asp-route-espacio="@Model.IdEspacio"
                   asp-route-evento="@Model.IdEvento"
                   asp-route-zona="@Model.IdZona"
                   asp-route-horario="@Model.IdHorario"
                   class="btn btn-warning">Regresar a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
