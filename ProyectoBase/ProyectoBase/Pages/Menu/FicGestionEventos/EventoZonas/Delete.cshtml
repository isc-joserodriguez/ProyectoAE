@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.EventoZonas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro que quieres Eliminar?</h3>
<div>
    <h4> Zona de Evento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Edificio:
        </dt>
        <dd>
            @Model.Edificio(Model.res_evento_zonas.IdEdificio.ToString())
        </dd>
        <dt>
            Espacio:
        </dt>
        <dd>
            @Model.Espacio(Model.res_evento_zonas.IdEspacio.ToString())
        </dd>
        <dt>
            Evento:
        </dt>
        <dd>
            @Model.Evento(Model.res_evento_zonas.IdEvento.ToString())
        </dd>
        <dt>
            Zona:
        </dt>
        <dd>
            @Model.Zona(Model.res_evento_zonas.IdZona.ToString())
        </dd>
        <dt>
            Fecha de Registro:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.res_evento_zonas.FechaReg)
        </dd>
        <dt>
            Usuario que registro:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.res_evento_zonas.UsuarioReg)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="res_evento_zonas.IdEdificio" />
        <input type="hidden" asp-for="res_evento_zonas.IdEspacio" />
        <input type="hidden" asp-for="res_evento_zonas.IdEvento" />
        <input type="hidden" asp-for="res_evento_zonas.IdZona" />
        <input type="hidden" asp-for="IdHorario" />
        <input type="submit" value="Eliminar" class="btn btn-info" />
        <a asp-page="./Index"
           asp-route-edificio="@Model.IdEdificio"
           asp-route-espacio="@Model.IdEspacio"
           asp-route-evento="@Model.IdEvento"
           asp-route-horario="@Model.IdHorario"
           class="btn btn-warning">Regresar a la Lista</a>
    </form>
</div>