@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.Eventos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Gestión de Eventos</h2>

<p>
    <a asp-page="Create">Crear Nuevo Evento</a>
</p>
<form asp-page="./Index" method="get">
    <input type="search" name="busqueda" value="@Model.CurrentFilter" placeholder="Buscar por ID, Nombre o Fecha" class="form-control" />
    <br />
    <p>
        <input type="submit" value="Buscar" class="btn btn-default" /> |
        <a asp-page="./Index">Limpiar</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.IdSort" asp-route-orden="@Model.ASC">
                    ID
                </a>
            </th>
            <th>
                <label class="control-label">Tipo Evento</label>
            </th>
            <th>
                <label class="control-label">Tipo General Evento</label>
            </th>
            <th>
                <label class="control-label">Ponente</label>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort" asp-route-orden="@Model.ASC">
                    Nombre Evento
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort" asp-route-orden="@Model.ASC">
                    Fecha de Inicio
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateEndSort" asp-route-orden="@Model.ASC">
                    Fecha Culminación
                </a>
            </th>
            <th>
                <label class="control-label">Página</label>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.res_eventos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEvento)
            </td>
            <td>
                @Model.TipoGenEvento(item.IdTipoGenEvento.ToString())
            </td>
            <td>
                @Model.GenEvento(item.IdGenEvento.ToString())
            </td>
            <td>
                @Model.PersonaReg(item.IdPersonaReg.ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.IdEvento"></a> |
                <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.IdEvento"></a> |
                <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.IdEvento"></a>
            </td>
        </tr>
}
    </tbody>
</table>
