@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.Eventos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Gestión de Eventos</h2>

<p>
    <a asp-page="Create">Crear Nuevo Evento</a>
</p>
<form asp-page="./Index" method="get">
        <p>
            Busqueda: 
            <input type="text" name="busqueda" value="@Model.CurrentFilter" placeholder="Buscar por ID, Nombre o Fecha"/>
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.IdSort" asp-route-orden="@Model.ASC">
                    ID
                </a>
            </th>
            <th>
                Tipo Evento
            </th>
            <th>
                @Html.DisplayNameFor(model => model.res_eventos[0].IdGenEvento)
                
            </th>
            <th>
                Ponente
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort" asp-route-orden="@Model.ASC">
                    Nombre Evento
                </a>
            </th>
            <!--th>
                @Html.DisplayNameFor(model => model.res_eventos[0].Observacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.res_eventos[0].Explicacion)
            </th-->
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort" asp-route-orden="@Model.ASC">
                    Fecha de Inicio
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateEndSort" asp-route-orden="@Model.ASC">
                    Fecha Culminación
                </a>
            </th>
            <th>
                Página
            </th>
            <!--th>
                Edificio
            </th-->
                    <!--th>
                @Html.DisplayNameFor(model => model.res_eventos[0].FechaReg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.res_eventos[0].UsuarioReg)
            </th-->
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.res_eventos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEvento)
            </td>
            <td>
                @Model.TipoGenEvento(item.IdTipoGenEvento.ToString())
            </td>
            <td>
                @Model.GenEvento(item.IdGenEvento.ToString())
            </td>
            <td>
                @Model.PersonaReg(item.IdPersonaReg.ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <!--td>
        @Html.DisplayFor(modelItem => item.Observacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Explicacion)
    </td-->
            <td>
                @Html.DisplayFor(modelItem => item.FechaIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <!--td>
        @Html.DisplayFor(modelItem => item.IdEdificio)
    </td-->
            <!--td>
        @Html.DisplayFor(modelItem => item.FechaReg)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UsuarioReg)
    </td-->
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdEvento">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.IdEvento">Ver</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdEvento">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
