@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.RhCatPersonas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catálago de Personas</h2>

<p>
    <a asp-page="Create" class="btn btn-info">Dar de Alta</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Matricula
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rh_cat_personas[0].RFC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rh_cat_personas[0].CURP)
                </th>
                <th>
                    Tipo de Persona
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rh_cat_personas[0].Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rh_cat_personas[0].Alias)
                </th>
                <th>
                    Fecha de Nacimiento
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.rh_cat_personas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumControl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
                @Html.DisplayFor(modelItem => item.ApPaterno)
                @Html.DisplayFor(modelItem => item.ApMaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CURP)
            </td>
            <td>
                @Model.getTipoPersona(item.TipoPersona)
            </td>
            <td>
                @Model.getSexo(item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @item.FechaNac.ToShortDateString()
            </td>
            <td>
                <div class="nav-item dropdown">
                    <a class="btn btn-info" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Opciones
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <ul class="nav navbar-nav">
                            <li>
                                <a asp-page="./Edit" class="glyphicon glyphicon-pencil" asp-route-id="@item.IdPersona"> Editar</a>
                                <a asp-page="./Details" class="glyphicon glyphicon-list-alt" asp-route-id="@item.IdPersona"> Detalles</a>
                                <a asp-page="./Delete" class="glyphicon glyphicon-trash" asp-route-id="@item.IdPersona"> Eliminar</a>
                            </li>
                        </ul>
                    </div>
                </div>

                
            </td>
        </tr>
}
    </tbody>
</table>
