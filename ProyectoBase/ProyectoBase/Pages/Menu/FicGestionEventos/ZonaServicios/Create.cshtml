@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.ZonaServicios.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Añadir</h2>

<h4>Servicios de la Zona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="res_zonas_servicios.IdEdificio" value="@Model.IdEdificio" type="hidden" class="form-control" />
            <input asp-for="res_zonas_servicios.IdEspacio" value="@Model.IdEdificio" type="hidden" class="form-control" />
            <input asp-for="res_zonas_servicios.IdZona" value="@Model.IdZona" type="hidden" class="form-control" />
            <div class="form-group">
                <label class="control-label">Edificio: @Model.getEdificio(Model.IdEdificio.ToString())</label>
            </div>
            <div class="form-group">
                <label class="control-label">Espacio: @Model.getEspacio(Model.IdEspacio.ToString())</label>
            </div>
            <div class="form-group">
                <label class="control-label">Zona: @Model.getZona(Model.IdZona.ToString())</label>
            </div>
            <div class="form-group">
                <label class="control-label">Producto/Servicio:</label>
                @Html.DropDownListFor(model => model.res_zonas_servicios.IdProdServEsp, Model.ProdServEsp, "Selecciona", new { @class = "form-control" })
                <span asp-validation-for="res_zonas_servicios.IdProdServEsp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-info" />
                <a asp-page="Index"
                   asp-route-edificio="@Model.IdEdificio"
                   asp-route-espacio="@Model.IdEspacio"
                   asp-route-zona="@Model.IdZona"
                   class="btn btn-warning">Regresar a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
