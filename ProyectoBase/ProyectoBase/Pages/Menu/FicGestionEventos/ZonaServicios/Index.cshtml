@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.ZonaServicios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Servicios por Zona</h2>

<p>
    <a asp-page="Create"
        asp-route-edificio="@Model.IdEdificio"
        asp-route-espacio="@Model.IdEspacio"
        asp-route-zona="@Model.IdZona"
       class="btn btn-info">Añadir</a>
    <a asp-page="../Zonas/Index" asp-route-espacio="@Model.IdEspacio" asp-route-edificio="@Model.IdEdificio" class="btn btn-warning">Regresar a la Lista</a>
</p>

<dl class="dl-horizontal">
    <dt>
        Edificio:
    </dt>
    <dd>
        @Model.getEdificio(Model.IdEdificio.ToString())
    </dd>
    <dt>
        Espacio:
    </dt>
    <dd>
        @Model.getEspacio(Model.IdEspacio.ToString())
    </dd>
    <dt>
        Descripción:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.res_cat_zonas.DesZona)
    </dd>
    <dt>
        Capacidad:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.res_cat_zonas.CapacidadPer)
    </dd>
    <dt>
        Filas de Asientos:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.res_cat_zonas.Filas)
    </dd>
    <dt>
        Asientos por Fila:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.res_cat_zonas.AsientosPorFila)
    </dd>
</dl>

<table class="table">
    <thead>
        <tr>
                <th>
                    Producto/Servicio   
                </th>
                <th>
                    Especifico
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.res_zonas_servicios) {
        <tr>
            <td>
                @Model.getProductoServicio(item.IdProdServ.ToString())
            </td>
            <td>
                @Model.getProductoServicioEsp(item.IdProdServEsp.ToString())
            </td>
            <td>
                <div class="nav-item dropdown">
                    <a class="btn btn-info" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Opciones
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <ul class="nav navbar-nav">
                            <li>
                                <a asp-page="./Delete"
                                   asp-route-edificio="@item.IdEdificio"
                                   asp-route-espacio="@item.IdEspacio"
                                   asp-route-zona="@item.IdZona"
                                   asp-route-prodserv="@item.IdProdServ"
                                   asp-route-prodservesp="@item.IdProdServEsp"
                                   class="glyphicon glyphicon-trash"> Eliminar </a>
                            </li>
                        </ul>
                    </div>
                </div>
               
            </td>
        </tr>
}
    </tbody>
</table>
