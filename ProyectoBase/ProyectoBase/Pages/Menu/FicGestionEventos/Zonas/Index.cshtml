@page
@model ProyectoBase.Pages.Menu.FicGestionEventos.Zonas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catálago de Zonas</h2>

<p>
    <a asp-page="Create" asp-route-espacio="@Model.IdEspacio" asp-route-edificio="@Model.IdEdificio" class="btn btn-info">Crear</a>
    <a asp-page="../Espacios/Index" asp-route-id="@Model.IdEdificio" class="btn btn-warning">Regresar a la Lista del Espacios</a>
</p>
<br />
<dl class="dl-horizontal">
    <dt>
        <label class="control-label">Edificio:</label>
    </dt>
    <dd>
        @Model.Edificio(Model.eva_cat_espacios.IdEdificio.ToString())
    </dd>
    <dt>
        <label class="control-label">Espacio:</label>
    </dt>
    <dd>
        @Html.DisplayFor(model => model.eva_cat_espacios.Alias)
    </dd>
    <dt>
        <label class="control-label">Clave:</label>
    </dt>
    <dd>
        @Html.DisplayFor(model => model.eva_cat_espacios.Clave)
    </dd>
    <dt>
        <label class="control-label">Descripción:</label>
    </dt>
    <dd>
        @Html.DisplayFor(model => model.eva_cat_espacios.DesEspacio)
    </dd>
    <dt>
        <label class="control-label">Capacidad:</label>
    </dt>
    <dd>
        @Html.DisplayFor(model => model.eva_cat_espacios.Capacidad)
    </dd>
    <dt>
        <label class="control-label">Prioridad:</label>
    </dt>
    <dd>
        @Html.DisplayFor(model => model.eva_cat_espacios.Prioridad)
    </dd>
</dl>
<br />
<table class="table">
    <thead>
        <tr>
                <th>
                    Descripción
                </th>
                <th>
                    Capacidad:
                </th>
                <th>
                    Filas:
                </th>
                <th>
                    Asientos por Fila:
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.res_cat_zonas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesZona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapacidadPer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AsientosPorFila)
            </td>
            <td>
                <div class="nav-item dropdown">
                    <a class="btn btn-info" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Opciones
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <ul class="nav navbar-nav">
                            <li>
                                <a asp-page="./Edit" asp-route-id="@item.IdZona" asp-route-espacio="@Model.IdEspacio" asp-route-edificio="@Model.IdEdificio" class="glyphicon glyphicon-pencil"> Editar </a>
                                <a asp-page="./Details" asp-route-id="@item.IdZona" asp-route-espacio="@Model.IdEspacio" asp-route-edificio="@Model.IdEdificio" class="glyphicon glyphicon-list-alt"> Detalles </a>
                                <a asp-page="./Delete" asp-route-id="@item.IdZona" asp-route-espacio="@Model.IdEspacio" asp-route-edificio="@Model.IdEdificio" class="glyphicon glyphicon-trash"> Eliminar </a>
                                <a asp-page="../ZonaServicios/Index" asp-route-edificio="@item.IdEdificio" asp-route-espacio="@item.IdEspacio" asp-route-zona="@item.IdZona" class="glyphicon glyphicon-star"> Servicios/Zona</a>
                            </li>
                        </ul>
                    </div>
                </div>
               
            </td>
        </tr>
}
    </tbody>
</table>
