@page
@model ProyectoAE.Pages.GestionDeEventos.ResEvento.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Agregar Evento</h2>

<h4>Eventos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Res_Eventos.NombreEvento" class="control-label">Nombre del Evento</label>
                <input required asp-for="Res_Eventos.NombreEvento" class="form-control" />
                <span asp-validation-for="Res_Eventos.NombreEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Res_Eventos.Orador" class="control-label">Ponente</label>
                <input required asp-for="Res_Eventos.Orador" class="form-control" />
                <span asp-validation-for="Res_Eventos.Orador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Res_Eventos.FechaInicio" class="control-label">Fecha de Inicio</label>
                <input type="date" required asp-for="Res_Eventos.FechaInicio" class="form-control" />
                <span asp-validation-for="Res_Eventos.FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Res_Eventos.FechaFin" class="control-label">Fecha de Finalización</label>
                <input type="date" required asp-for="Res_Eventos.FechaFin" class="form-control" />
                <span asp-validation-for="Res_Eventos.FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Res_Eventos.Explicaciones" class="control-label">Explicación</label>
                <textarea rows="10" cols="20" wrap="soft" asp-for="Res_Eventos.Explicaciones" class="form-control"></textarea>
                <span asp-validation-for="Res_Eventos.Explicaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Res_Eventos.Observaciones" class="control-label">Observaciones</label>
                <textarea rows="10" cols="20" wrap="soft" asp-for="Res_Eventos.Observaciones" class="form-control"></textarea>
                <span asp-validation-for="Res_Eventos.Observaciones" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Res_Eventos.Url" class="control-label">Página Web</label>
                <input type="url" placeholder="https://www.ejemplo.com" required asp-for="Res_Eventos.Url" class="form-control" />
                <span asp-validation-for="Res_Eventos.Url" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" /> |
                <a asp-page="Index" class="btn btn-default">Regresar a Eventos</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
